{
  "atlas": {
    "base_url": "http://localhost:8000",
    "api_token": null,
    "asset": {
      "id": "asset-001",
      "type": "digital",
      "name": "ATLAS Asset",
      "model_id": "generic-asset"
    }
  },
  "modules": {
    "comms": {
      "enabled": true,
      "enabled_methods": ["wifi", "meshtastic"],
      "simulated": false,
      "gateway_node_id": null,
      "radio_port": "auto",
      "mode": "general",
      "spool_path": "~/.baseplate_comm_spool.json",
      "wifi": {
        "connect_on_start": true,
        "scan_public_networks": true,
        "networks": [],
        "interface": null,
        "timeout_s": 10.0
      }
    },
    "operations": {
      "enabled": true,
      "heartbeat_interval_s": 30.0,
      "checkin_interval_s": 30.0,
      "checkin_interval_wifi_s": 1.0,
      "checkin_interval_mesh_s": 15.0,
      "checkin_payload": {
        "latitude": 0.0,
        "longitude": 0.0
      },
      "track_update_min_distance_m": 25.0,
      "track_update_min_seconds": 5.0,
      "_comment": "Set checkin_interval_s to 0 or negative to disable check-ins. Method-specific intervals (checkin_interval_wifi_s, checkin_interval_mesh_s) override the default when that method is active."
    },
    "sensors": {
      "enabled": false,
      "devices": []
    },
    "data_store": {
      "enabled": true,
      "persistence": {
        "enabled": false,
        "path": "~/.atlas_data_store.json",
        "interval_s": 30.0,
        "persist_on_change": false
      }
    }
  },
  "bus_logging": {
    "enabled": false,
    "log_file": "~/.atlas_bus.log",
    "max_bytes": 5242880,
    "backup_count": 5
  }
}
